{
  "id": "User authentication",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "emailAddress": {
      "type": "string",
      "pattern": "^[^@^\\s]+@[^@^\\.^\\s]+(\\.[^@^\\.^\\s]+)+$"
    },
    "password": {
      "type": "string",
      "maxLength": 255,
      "minLength": 10
    }
  },
  "required": [
    "emailAddress",
    "password"
  ]
}