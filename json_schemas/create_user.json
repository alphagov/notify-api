{
  "id": "User authentication",
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "additionalProperties": false,
  "properties": {
    "emailAddress": {
      "type": "string",
      "pattern": "^[^@^\\s]+@[^@^\\.^\\s]+(\\.[^@^\\.^\\s]+)+$"
    },
    "mobileNumber": {
      "type": "string",
      "pattern": "^\\+44[\\d]{10}$"
    },
    "password": {
      "type": "string"
    }
  },
  "required": [
    "emailAddress",
    "mobileNumber",
    "password"
  ]
}