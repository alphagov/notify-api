  "type": "object",
  "additionalProperties": false,
  "properties": {
    "emailAddress": {
      "type": "string",
      "pattern": "^[^@^\\s]+@[^@^\\.^\\s]+(\\.[^@^\\.^\\s]*)*.gov.uk"
    }
  },
  "required": [
